<% layout("layouts/boilerplate") %>

<body>
  <div class="mt-3">
    <h2 class="text-center">Edit Your Listing</h2>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="mt-3 p-4 border rounded shadow-sm needs-validation" novalidate enctype="multipart/form-data">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input id="title" name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
        <div class="invalid-feedback">Title is not valid</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea id="description" name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">Description is not valid</div>
      </div>
      <div class="mb-3">
        <h4>Original Image</h4>
        <img src="<%= listing.image.url %>" alt="Listing Image" class="img-fluid rounded" style="max-width: 300px; max-height: 200px; object-fit: cover;">
      </div>
      

      <div class="mb-3">
        <label for="image" class="form-label">Upload new Image</label>
        <input id="image" name="listing[image]"  type="file" class="form-control">
        <div class="invalid-feedback">Image is not valid</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (â‚¹):</label>
        <input id="price" name="listing[price]" value="<%= listing.price %>" type="number" min="0" class="form-control" required>
        <div class="invalid-feedback">Price not valid</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input id="location" name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
        <div class="invalid-feedback">Location name is not valid</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country:</label>
        <input id="country" name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required>
        <div class="invalid-feedback">Country name is not valid</div>
      </div>

      <button type="submit" class="btn w-20" style="background-color: rgb(231, 47, 47); color: white; border: none;">
        Update Listing
      </button>
      
    </form>
  </div>
  <br> <br>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
